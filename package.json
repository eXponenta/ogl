{
    "name": "ogl",
    "version": "0.0.93",
    "description": "WebGL Library",
    "module": "dist/index.mjs",
    "types": "types/index.d.ts",
    "sideEffects": false,
    "directories": {
        "example": "examples"
    },
    "scripts": {
        "prebuild": "rimraf ./dist && rimraf ./types",
        "build": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://gordonnl@github.com/oframe/ogl.git"
    },
    "author": {
        "name": "Nathan Gordon",
        "email": "gordonnl@gmail.com",
        "url": "https://twitter.com/gordonnl"
    },
    "license": "Unlicense",
    "bugs": {
        "url": "https://github.com/oframe/ogl/issues"
    },
    "homepage": "https://github.com/oframe/ogl#readme",
    "prettier": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "htmlWhitespaceSensitivity": "css",
