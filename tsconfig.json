{
    "compilerOptions": {
      "allowJs": true,
      "outDir": "./dist",
      "target": "ES2018",
      "module": "ESNext",
      "lib": ["ESNext", "dom"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "pretty": true,
      "skipLibCheck": true,
      "declaration": true,
      "forceConsistentCasingInFileNames": true,
      "declarationDir": "./types"
    },
    "include": ["./src/**/*"]
  }
